<!DOCTYPE html>
<html>
<head>
  <title>Demo</title>
  <%= stylesheet_link_tag  "application", :media => "all" %>
  <%= stylesheet_link_tag "scaffolds" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag "jquery", "jquery_ujs" %>
  <%= csrf_meta_tag %>
</head>


<body id="store" >
  <div id="user_nav">
  	<%= link_to "Sign up", new_user_path %>
  </div>
  <div id="banner" >
	 <%= image_tag("logo.png") %>
	 <%= @page_title || "Pragmatic Bookshelf" %>
  </div>
  <div id="columns" >
    <div id="side" >
    	<div id="cart" >
    		<% if @cart %>
	    		<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
					<%= render @cart %>
				<% end %>
			<% end %>			
		</div>
    <a href="#" >Home</a><br />
    <a href="#" >Questions</a><br />
    <a href="#" >News</a><br />
    <a href="#" >Contact</a><br />
    </div>
  <div id="main" >
    <%= yield %>
  </div>
 </div>
</body>
</html>